<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View Definition -->
    <record id="purchase_tree_view_id" model="ir.ui.view">
        <field name="name">Purchase Tree View</field>
        <field name="model">my_purchase.purchase</field>
        <field name="arch" type="xml">
            <tree string="Purchase Tree">
                <field name="name"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="pembelian_actions_tree_view_id" model="ir.actions.act_window">
        <field name="name">Purchase</field>
        <field name="res_model">my_purchase.purchase</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="purchase_tree_view_id"/>
    </record>

