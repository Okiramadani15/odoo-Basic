<record id="student_calendar_view" model="ir.ui.view">
    <field name="name">students.calendar</field>
    <field name="model">students</field>
    <field name="arch" type="xml">
        <calendar string="Student Session Schedule" date_start="trial_date">
            <field name="name"/>
            <field name="code"/>
            <field name="trial_date"/>
            <field name="state"/>
        </calendar>
    </field> 
</record>

   


	<record id="student_search_view" model="ir.ui.view">
		<field name="name">students.search</field>
		<field name="model">students</field>
		<field name="arch" type="xml">
			<search string="Students">
				<field name = "name" />
				<field name = "code" />
				<field name="trial_date"/>
				<group expand="0" string="Group By">
				  <filter name="trial_date" context="{'group_by' : 'trial_date'}"/>
				</group>
			</search>
		</field> 
	</record>

	<record id="students_form_view" model="ir.ui.view">
		<field name = "name">students.form</field>
		<field name = "model">students</field>
		<field name = "arch" type="xml">
			<form string="Students">
				<header>
					<button string='Success' type='object' name='button_success' class='oe_highlight' />
					<button string='Failed' type='object' name='button_failed'/>

					<field name='state' widget='statusbar'/>
				</header>
				<sheet>
					<group>
						<group>
						<field name = "image" widget="image" nolabel="1"/>
						<field name="name"/>
						<field name="code"/>
						<field name="trial_date"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_students" model="ir.actions.act_window">
		<field name="name">Student</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">students</field>
		<field name="view_mode">tree,form,calendar,kanban</field>
		<field name="context">{}</field>
		<field name="domain">[]</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create Your Data Here!
			</p>
		</field>
	</record>

	<menuitem	id="college_root_menu"
				name="college"
				web_icon="college,static/description/icon.png"
				sequence="7"/>

	<menuitem	id="student_menu"
				name="Student" action="action_students"
				parent="college_root_menu"
				sequence="10"/>


</odoo>
