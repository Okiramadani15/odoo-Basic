<?xml version="1.0" encoding="utf-8"?>

<odoo>

<record id="student_kanban_view" model="ir.ui.view">
        <field name="name">students.kanban</field>
        <field name="model">students</field>
        <field name="arch" type="xml">
            <kanban default_group_by='state'>
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="code"/>
                <field name="trial_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <style>
                                .o_kanban_images {
                                    text-align: left;
                                    padding: 10px;
                                }
                                .o_kanban_images img {
                                    max-width: 250px; /* Set width as needed */
                                    max-height: 100px; /* Set height as needed */
                                    object-fit: cover; /* Ensures the image fits well */
                                    border-radius: 8px; /* Optional: round corners */
                                    border: 1px solid #ddd; /* Optional: border around the image */
                                }
                            </style>
                            <div class="o_kanban_images">
                                <img t-att-src="kanban_image('students','image',record.id.raw_value)" alt="Student Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <span><field name="code"/></span>
                                </div>
                                <div>
                                    <span><field name="trial_date"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
				   <!-- Tambahkan grup status untuk kanban view -->
            <groups>
                <group string="Waiting" name="waiting" domain="[('state','=','waiting')]" />
                <group string="Success" name="success" domain="[('state','=','success')]" />
                <group string="Failed" name="failed" domain="[('state','=','failed')]" />
            </groups>
            </kanban>
        </field>
    </record>

